<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.krokken.helloandroid.MainActivity"
    android:background="@android:color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            tools:ignore="contentDescription"
            android:id="@+id/uda"
            android:src="@drawable/uda"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            tools:ignore="contentDescription"
            android:id="@+id/udacity"
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/udacity"/>

        <TextView
            android:id="@+id/company"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/company"
            android:textColor="@android:color/black"
            android:textSize="48sp"/>

    </LinearLayout>

        <TextView
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginStart="10sp"
            android:layout_marginLeft="10sp"
            android:textColor="@android:color/black"
            android:text="@string/address2"
            android:layout_above="@id/address"/>

    <TextView
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginStart="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginBottom="10sp"
        android:textColor="@android:color/black"
        android:text="@string/address"/>

        <TextView
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/phone"
            android:layout_above="@id/fax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginEnd="10sp"
            android:layout_marginRight="10sp"
            android:text="@string/phonenumber"
            />

    <ImageView
        tools:ignore="contentDescription"
        android:layout_toStartOf="@id/phone"
        android:layout_toLeftOf="@id/phone"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignBottom="@id/phone"
        android:layout_alignTop="@id/phone"
        android:src="@drawable/phone"/>

        <TextView
            android:layout_marginRight="10sp"
            android:layout_marginEnd="10sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_above="@id/email"
            android:id="@+id/fax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="@string/faxnumber"/>

    <ImageView
        tools:ignore="contentDescription"
        android:layout_toStartOf="@id/fax"
        android:layout_toLeftOf="@id/fax"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignBottom="@id/fax"
        android:layout_alignTop="@id/fax"
        android:src="@drawable/fax"/>

    <TextView
        android:layout_marginBottom="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginEnd="10sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="@string/email"/>

    <ImageView
        tools:ignore="contentDescription"
        android:layout_toStartOf="@id/email"
        android:layout_toLeftOf="@id/email"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignBottom="@id/email"
        android:layout_alignTop="@id/email"
        android:src="@drawable/email"/>


</RelativeLayout>