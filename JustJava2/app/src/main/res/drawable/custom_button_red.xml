<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#FFCDD2"
                android:endColor="#FFCDD2"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#FFCDD2" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="16dp"
                android:top="16dp"
                android:right="16dp"
                android:bottom="16dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#EF9A9A"
                android:startColor="#EF9A9A"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#EF9A9A" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="#EF9A9A"
                android:startColor="#EF9A9A"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#212121" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="12dp"
                android:top="12dp"
                android:right="12dp"
                android:bottom="12dp" />
        </shape>
    </item>
</selector>