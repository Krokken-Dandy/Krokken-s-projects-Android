<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/music_background"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/music_library"
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_activity_selection_height"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="@string/music"
                android:textColor="@android:color/black"
                android:textSize="@dimen/main_activity_selection_text_size" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/podcast_background"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/podcast_library"
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_activity_selection_height"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="@string/podcasts"
                android:textColor="@android:color/black"
                android:textSize="@dimen/main_activity_selection_text_size" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#B2FF59"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/playlists"
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_activity_selection_height"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="@string/playlists"
                android:textColor="@android:color/black"
                android:textSize="@dimen/main_activity_selection_text_size" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#7C4DfF"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/currently_playing"
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_activity_selection_height"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="@string/currently_playing"
                android:textColor="@android:color/black"
                android:textSize="@dimen/main_activity_selection_text_size" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_light"
            android:orientation="horizontal"
            android:padding="@dimen/main_activity_other_options_padding">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <ImageView
                    android:id="@+id/settings"
                    android:layout_width="@dimen/main_activity_selection_settings_width"
                    android:layout_height="@dimen/main_activity_selection_settings_height"
                    android:layout_gravity="center"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@mipmap/ic_settings"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/main_activity_selection_text_size" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <ImageView
                    android:id="@+id/store"
                    android:layout_width="@dimen/main_activity_selection_settings_width"
                    android:layout_height="@dimen/main_activity_selection_settings_height"
                    android:layout_gravity="center"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@mipmap/ic_store"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/main_activity_selection_text_size" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <ImageView
                    android:id="@+id/trending"
                    android:layout_width="@dimen/main_activity_selection_settings_width"
                    android:layout_height="@dimen/main_activity_selection_settings_height"
                    android:layout_gravity="center"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@mipmap/ic_hot"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/main_activity_selection_text_size" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <ImageView
                    android:id="@+id/chart"
                    android:layout_width="@dimen/main_activity_selection_settings_width"
                    android:layout_height="@dimen/main_activity_selection_settings_height"
                    android:layout_gravity="center"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@mipmap/ic_chart"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/main_activity_selection_text_size" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>