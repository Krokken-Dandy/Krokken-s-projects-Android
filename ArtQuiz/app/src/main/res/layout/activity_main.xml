<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.krokken.artquiz.MainActivity"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/quiz_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Art Quiz"
        android:padding="16dp"
        />
    <TextView
        android:id="@+id/question_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Question # of #"
        android:padding="16dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/quiz_title"
        android:padding="8dp"
        android:hint="Enter Name"
        android:id="@+id/name_input"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:imeOptions="actionDone"
        android:inputType="textPersonName|textAutoCorrect|textCapWords"
        android:textColorHint="#9FF44336"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_marginTop="100dp"
        android:layout_height="500dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
      />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="Submit"
        />

</RelativeLayout>
